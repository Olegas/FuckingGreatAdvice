<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ru.elifantiev.fga"
      android:versionCode="2"
      android:versionName="1.0.1">
    <application
            android:label="@string/app_name"
            android:icon="@drawable/icon"
            android:debuggable="false">
        <activity android:name="MainActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Widget Receiver (Updater) -->
        <receiver android:label="@string/app_name" android:name=".widget.FuckingWidget" android:icon="@drawable/icon">
			<intent-filter android:icon="@drawable/icon" android:label="@string/app_name">
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/wide_widget" />
		</receiver>
		
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk android:minSdkVersion="3" />
</manifest> 
