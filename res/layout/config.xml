<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:paddingLeft="10dp"
	android:paddingTop="5dp" android:paddingRight="10dp">

	<CheckBox android:id="@+id/config_type" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/config_type"
		android:gravity="center_vertical" android:layout_marginBottom="10dp" />

	<SeekBar android:id="@+id/config_refresh"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:focusable="true" android:progress="4" android:max="24"
		android:longClickable="true" />

	<TextView android:layout_height="wrap_content" android:text="@string/config_refresh_lbl"
		android:layout_width="fill_parent" android:id="@+id/config_refresh_lbl"
		android:gravity="right" android:layout_marginBottom="10dp" />

	<Button android:layout_gravity="center" android:text="@string/config_set"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_marginTop="10dp" android:id="@+id/config_set_white"
		android:background="@drawable/appwidget_white" />

	<Button android:layout_gravity="center" android:text="@string/config_set"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_marginTop="10dp" android:id="@+id/config_set"
		android:background="@drawable/appwidget_black" android:textColor="#EEE"/>

</LinearLayout>